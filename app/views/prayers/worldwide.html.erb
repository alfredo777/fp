<%= form_for(@prayer=Prayer.new) do |f| %>
 <div class="field">
    <%= f.text_area :pray, :class => "textarea"%>
 
 
<%=f.submit "Share Pray",:class => "btn btn-info btn-large" %>
<%end%>
<div id="name">

<link rel="stylesheet" href="app/stileshets/reset.css" type="text/css"/>
<link rel="stylesheet" href="app/stileshets/style.css" type="text/css"/>


<table width=600>
  <tr width=60>
   <h2><th>Prays</th></h2> 
    
  </tr>
<% @prayers.each do |prayer| %>
  <tr width=540>
   
    <td><%= image_tag(prayer.image) %> </td>
    <td>Pray:<%= prayer.pray %><br>
    	     <PRE>  By:<%= prayer.name %> </PRE></td>
  
  </tr>
  
<% end %>
</table>
</div>
</div>
<br />
<div class="pagination">
<center><%= paginate @prayers%></center>
</div>
