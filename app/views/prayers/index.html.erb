
<%= form_for(@prayer=Prayer.new) do |f| %>
 <div class="field">
    <%= f.text_area :pray, :class => "textarea" %>
        

<%=f.submit "Share Pray", :class => "btn btn-info btn-large"%>
    
 </div>
<div id="name">
<link rel="stylesheet" href="app/stileshets/reset.css" type="text/css"/>
<link rel="stylesheet" href="app/stileshets/style.css" type="text/css"/>

<%end%>
<% @prayers.each do |prayer|%>
<div class="thumb-wrap">
   <div style="clear: both">	     
    <pre class="pray"><div class="img"><%= image_tag(current_user.image) %> Pray:<%= prayer.pray%></pre>
    <pre><div class="btn btn-danger"><%= link_to 'Destroy', prayer, :confirm => 'Are you sure?', :method => :delete %></div>
    </pre>
   </div>
</div>
<% end %>
</div>
<center>
<br />	
<%= paginate @prayers%>
</center>
